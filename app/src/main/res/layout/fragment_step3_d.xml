<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landlord.view.questionnaire.view.StepThreeDFragment"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/step3Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Just last one step!"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="15dp"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/step3Descr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/step3Title"
            android:text="Does your place have any of these?"
            android:textColor="#000000"
            android:layout_marginBottom="30dp"
            android:textSize="22dp"/>

        <CheckBox
            android:id="@+id/option1step3Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/step3Descr"
            android:text="Security Camera(s)"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:textSize="18dp"/>

        <CheckBox
            android:id="@+id/option2step3Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/option1step3Checkbox"
            android:text="Weapons"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:textSize="18dp"/>

        <CheckBox
            android:id="@+id/option3step3Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/option2step3Checkbox"
            android:text="Dangerous animals"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:textSize="18dp"/>

        <CheckBox
            android:id="@+id/option4step3Checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/option3step3Checkbox"
            android:text="Door locks"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:textSize="18dp"/>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3"
            android:layout_below="@id/option4step3Checkbox"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/importantThings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1"
            android:text="Important Things to Know"
            android:textColor="#808080"
            android:layout_marginTop="30dp"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/importantThingsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/importantThings"
            android:text="Be sure to comply with your local laws and review Roomify's non-discrimination policy and guest and Host fees."
            android:textColor="#808080"
            android:layout_marginTop="8dp"
            android:textSize="18dp"/>







    </RelativeLayout>
</FrameLayout>
