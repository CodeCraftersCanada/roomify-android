<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landlord.view.questionnaire.view.StepThreeAFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/step1Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/step3img"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blur_overlay" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvStep3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:text="Step 3"
            android:layout_marginTop="16dp"

            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvStep3Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStep3"
            android:text="Finish up and publish"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="35dp"/>
        <TextView
            android:id="@+id/tvStep3Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStep3Title"
            android:layout_marginTop="15dp"
            android:text="  Finally, you'll choose if you'd like to start with an experienced guest, then you'll set your nightly price. Answer a few quick questions and publish when you're ready."
            android:textColor="#000000"
            android:textSize="18dp"
            android:lineSpacingExtra="5dp"/>
    </RelativeLayout>


</FrameLayout>