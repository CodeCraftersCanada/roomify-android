<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StepOneAFragment">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/step1Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/step1img"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/blur_overlay" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvStep1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_marginTop="16dp"
            android:text="Step 1"
            android:textColor="#000000"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvStep1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStep1"
            android:text="Tell us about your Place"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/tvStep1Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStep1Title"
            android:layout_marginTop="15dp"
            android:text="  In this step,we'll ask you which type of property you have and if guests will book the entire place or just a room. Then let us know the location and how many guests can stay."
            android:textColor="#000000"
            android:textSize="18dp"
            android:lineSpacingExtra="5dp"/>
    </RelativeLayout>


</FrameLayout>