<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".landlord.view.questionnaire.view.StepTwoDFragment"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Create your Description"
            android:textColor="#000000"
            android:layout_marginBottom="15dp"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescriptionTitle"
            android:text="Share what makes your place special."
            android:textColor="#808080"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:layout_margin="16dp">
            <EditText
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:padding="16dp"
                android:hint="Make some memories at this unique and family-friendly place."
                android:textSize="22sp"
                android:gravity="start"
                android:background="@drawable/rounded_border" />

        </FrameLayout>

        <TextView
            android:id="@+id/textWatcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="375dp"
            android:layout_marginStart="15dp"
            android:textSize="22sp"
            android:layout_below="@id/tvDescription"
            android:text="0/500" />
    </RelativeLayout>
</FrameLayout>
